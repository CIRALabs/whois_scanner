{
  "$id": "https://example.com/whois-crawler/input.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Defines input file format for whois crawler",
  "type": "object",
  "properties": {
    "terms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "hostname": {
            "type": "string"
          }
        },
        "required": [
          "hostname"
        ]
      }
    }
  },
  "required": [
    "domains"
  ]
}
